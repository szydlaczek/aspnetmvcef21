@model IEnumerable<NetCoreApp.ViewModels.OrderViewModel>
<table class="table">
    <thead>
        <tr>
            <th>Order date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var order in Model)
        {
            <tr>
                <td>@order.OrderDate</td>
                <td>@order.Status</td>
            </tr>
        }
    </tbody>
</table>